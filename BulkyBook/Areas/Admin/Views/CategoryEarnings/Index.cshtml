@model IEnumerable<BulkyBook.Models.ViewModels.QueryCategoryVM>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-6">
        <h2 class="text-info">Earnings Structure List</h2>
    </div>
</div>

<br />
<form method="get" , asp-action="Search">
    <p>
        <input type="search" placeholder="Enter a category name..." value="@ViewData["GetCategorycDetails"]" name="nameCat" style="width:500px;" />
        <input type="submit" value="Search" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-success">All Categories</a>
    </p>
</form>
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Name)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Count)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Count) kn
                </td>
            </tr>

        }
    </table>
</div>
